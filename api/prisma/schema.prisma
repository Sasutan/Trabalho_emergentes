generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Arma {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(80)
  preco         Decimal      @db.Decimal(10, 2)
  calibre       String   @db.VarChar(20)
  numDisparos   Int      
  foto          String   
  tipoArma      tipoArmas @default(PISTOLA)
  fabricante    Fabricante @relation(fields: [fabricanteId], references: [id])
  fabricanteId  Int     
  testes       Teste[]
  @@map("armas")
}

model Fabricante {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(80)
  paisOrigem    String   @db.VarChar(80)
  anoFundacao   Int      
  arma          Arma[]
  @@map("fabricantes")
}


model Cliente {
  id            Int      @id @default(autoincrement())
  nome          String   @db.VarChar(80)
  email         String   @db.VarChar(80)
  licencaEsp    String   @db.VarChar(20)
  testes       Teste[]
  @@map("clientes")
}

model Teste {
  id            Int      @id @default(autoincrement())
  data          DateTime
  resultado     String   @db.VarChar(20)
  cliente       Cliente  @relation(fields: [clienteId], references: [id])
  clienteId     Int
  arma          Arma     @relation(fields: [armaId], references: [id])
  armaId        Int
  @@map("testes")
}

enum tipoArmas {
  PISTOLA
  REVOLVER
  ESPINGARDA
  CARABINA
  FUZIL
}